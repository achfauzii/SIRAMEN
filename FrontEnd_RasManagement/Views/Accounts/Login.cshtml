<style>
    .act-btn {
        background: #33A6CB;
        opacity: 80%;
        display: block;
        width: 50px;
        height: 50px;
        line-height: 50px;
        text-align: center;
        color: white;
        font-size: 32px;
        font-weight: bold;
        /*border-radius: 50%;*/
        border-radius: 50%;
        text-decoration: none;
        transition: ease all 0.3s;
        position: fixed;
        right: 30px;
        bottom: 30px;
        z-index: 1;
    }
    .bottom-right {
        position: absolute;
        bottom: 0;
        right: 0;
    }
    .act-btn:hover {
        background: gray;
        transform: scale(1.2);
        
    }
    #to-show {
      display: none; 
    }
    .bottom-right:hover > #to-show {
        display: block; 
        z-index: 9;
    }
    
</style>

<div class="bottom-right">
    <button class="act-btn border-0" data-tooltip="tooltip" data-placement="left" title="Report Feedback">
        <i class="fa-regular fa-flag" id="icon-button" style="font-size: 0.55em; display: flex; justify-content: center; align-items: center;"></i>
    </button>

    <div id="to-show" class="card shadow-lg bg-white" style="margin-bottom: 5.5rem; margin-right: 1rem">
        <div class="card-header text-center">
            <h6 class="text-dark" style="font-weight: bold;">Report Feedback</h6>
        </div>
         <div class="card-body">
            <form id="pengaduan">
                <div class="form-group">
                    <div class="input-group">
                        <input type="text" class="form-control" id="name" placeholder="Enter your name" autocomplete="off" required-report>
                        
                    </div>
                </div>
                <div class="form-group">
                    <div class="">
                        <input type="email" class="form-control" id="email" placeholder="Enter Berca email" autocomplete="off" required-report>
                        <span class="error-message" id="validateEmail" style="color: red; display: none;">Use Berca Email Domain</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">

                        <textarea class="form-control" id="description" rows="3" placeholder="Enter your description" autocomplete="off" style="max-height: 200px;min-height:50px;" required-report></textarea>

                    </div>
                </div>
                <button type="button" onclick="kirimPengaduan();" class="btn btn-secondary btn-user btn-block">Submit</button>
            </form>
        </div>
    </div>
</div>



<body id="loaderContainer" class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-lg-5">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->

                        <div class="">

                            <div class="">
                                <div class="pb-5 pr-5 pl-5 pt-3">
                                    <span style=" display: flex; justify-content: center; align-items: center;"><img src="~/img/SiramenFull.webp" width="235" height="auto" alt="Berca Hardayaperkasa" style="max-width: 100%; max-height: 85px;" /></span>
                                    <hr>
                                    <div class="text-center">
                                        <h3 class="h4 text-primary mb-3" style="font-weight: bold;">Welcome Back!</h3>
                                    </div>
                                    <form class="user" id="loginForm">
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter Email Address..." required>
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Password" required>
                                        </div>

                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="customCheck" onclick="showPassword()">
                                                <label class="custom-control-label" for="customCheck">
                                                    Show Password
                                                </label>
                                            </div>
                                        </div>
                                        <button href="index.html" class="btn btn-primary btn-user btn-block" type="submit">
                                            Login
                                        </button>

                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="/Accounts/ForgotPassword">Forgot Password?</a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

