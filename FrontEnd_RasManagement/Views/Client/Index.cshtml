    }

    table.table-bordered.dataTable th, table.table-bordered.dataTable td {
        font-size: 14px;
    }

    .form-control {
        height: 31px;
    }

    select.form-control {
        font-size: 14.5px;
    }

    .dataTables_info {
        font-size: 14.5px;
    }

    .table.dataTable {
        margin-top: 0 !important;
    }

