@{
    ViewData["Title"] = "Certificate";
    var role = ViewData["UserRole"] as string;
    var layoutPath = $"~/Views/Layout/Layout{role}.cshtml";
    Layout = layoutPath;
}

<style>
    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #F7F6FE; /* Warna latar belakang untuk baris ganjil */
    }

    .table-striped tbody tr:nth-of-type(even) {
        background-color: #FFFFFF; /* Warna latar belakang untuk baris genap */
    }

</style>

<!-- /.card-header -->
<div class="card">
    <div class="card-body">
        <h5 class="mb-3">Achievement / Certificate</h5>
        <button style="background-color:#624DE3;  font-size: 12px;" type="button" class="btn btn-sm text-light mb-2" data-toggle="modal" data-target="#Modal" onclick="ClearScreen();">
            + Add Certificate
        </button>

        <table id="TB_Certificate" class="table table-striped w-100" style="font-size:14px; color:black">
            <thead style="background-color:#FFFFFF">
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Organization</th>
                    <th scope="col">Publication Year</th>
                    <th scope="col">Valid Until</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
        </table>

    </div>
</div>

@*Modal*@
<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Achievement / Certificate</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <input type="text" class="form-control" id="CertificateId" hidden>
                    </div>
                    <div class="form-group">
                        <label for="Name">Certificate Name</label>
                        <input type="text" class="form-control" id="Name" oninput="handleInput(event, this);" onpaste="handleInput(event, this);" placeholder="Enter certificate name" required>
                        <span class="error-message" style="color: red; display: none;">This field is required!</span>
                    </div>
                    <div class="form-group">
                        <label for="Publisher">Issuing Organization</label>
                        <input type="text" class="form-control" id="Publisher" oninput="handleInput(event, this);" onpaste="handleInput(event, this);" placeholder="Enter the publisher" required>
                        <span class="error-message" style="color: red; display: none;">This field is required!</span>
                    </div>
                    <div class="form-group">
                        <label for="PublicationYear">Publication Years</label>
                        <input type="month" class="form-control" id="PublicationYear" required>
                        <span class="error-message" style="color: red; display: none;">This field is required!</span>
                    </div>
                    <div class="form-group">
                        <label for="ValidUntil">Valid Until</label>
                        <input type="month" class="form-control" id="ValidUntil">
                        <span class="error-message" style="color: red; display: none;">This field is required!</span>
                        <small class="form-text text-muted">Leave blank if there is no expiration date</small>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="Save" onclick="Save();">Save</button>
                <button type="button" class="btn btn-warning" id="Update" onclick="Update();">Update</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="ClearScreen();">Close</button>
            </div>
        </div>
    </div>
</div>
