@{
    ViewData["Title"] = "ManageAccounts";
    Layout = "~/Views/Layout/LayoutSuperAdmin.cshtml";
}

<h5 style="font-family:comfortaa; color: black" class="font-weight-bold">Manage Employees Account</h5>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Employees Account Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTableAccounts" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Gender</th>
                        <th>Hired Status</th>
                        <th>NIK</th>
                        <th>Role</th>
                    </tr>
                </thead>

            </table>
        </div>
    </div>
</div>


@*Modal ROLE*@
<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><span id="FullName" class="badge badge-light"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <input type="text" class="form-control" id="AccountId" hidden>
                        <label for="Role">Change Role</label>
                        <select id="Role" class="form-control" required>
                            <option value="2">Admin</option>
                            <option value="3">Employee</option>
                        </select>
                        <span class="error-message-framework" style="color: red; display: none;">This field is required!</span>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" data-dismiss="modal" id="Update" onclick="UpdateRole();">Update</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@*Modal NIK*@
<div class="modal fade" id="ModalNIK" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><span id="FullName_" class="badge badge-light"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <input type="text" class="form-control" id="AccountIdNIK" hidden>
                        <label for="NIK">Edit NIK</label>
                        <input type="text" class="form-control" id="NIK" required>
                        <span class="error-message" style="color: red; display: none;">This field is required!</span>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" id="UpdateNIK" onclick="UpdateNIK();">Update</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="ClearScreen();">Close</button>
            </div>
        </div>
    </div>
</div>

@section script
    {
    <script src="~/js/ManageAccounts.js"></script>
}