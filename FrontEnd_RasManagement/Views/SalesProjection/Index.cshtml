﻿@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/LayoutAdmin.cshtml";
}

<style>
    /* Menghilangkan panah di input number pada Webkit browsers (Chrome, Safari, Opera) */
    input[type=number]::-webkit-outer-spin-button,
    input[type=number]::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    /* Menghilangkan panah di input number pada Firefox */
    input[type=number] {
        -moz-appearance: textfield;
    }
</style>
<link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">


<div class="card mt-2 mb-3">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" href="#" id="oppurtunity">Oppurtunity</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#" id="momSales">MOM Sales</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#" id="reOpen">Re Open</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#" id="bestView">Best view</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#" id="goals">Goals</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#" id="lose">Loss / Unclear </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#" id="reject">Reject</a>
        </li>
    </ul>
    <div class="card-header">
        <div class="row">
            <div class="col"><h5 style="color:#0D6EFD;" class="mb-1 font-weight-bold" id="text-show">Sales Projection</h5></div>
        </div>
    </div>







    <div class="card-body ">
        @*<button style="background-color:#0D6EFD; font-size: 12px;" type="button" class="btn btn-sm text-light  mb-2" id="addSalesProjection" data-toggle="modal" data-target="#Modal-addSalesProjection" onclick="ClearScreen();">
        + Add Sales Projection
        </button>*@

        <div class="row">
            <div class="col">
                <div class="d-grid d-md-flex justify-content-md-end">
                    <button style="background-color:#0D6EFD; font-size: 14px;" type="button" class="btn btn-md text-light mb-3  " id="addSalesProjection" data-toggle="modal" data-target="#Modal-addSalesProjection" onclick="ClearScreen();">
                        + Add Sales Projection
                    </button>
                </div>
                <table id="salesProjectionTable" class="table table-striped table-bordered text-nowrap w-100 timeSheetTable" style="font-size:13px; color:black; display: none ">
