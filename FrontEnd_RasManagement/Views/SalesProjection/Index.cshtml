                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>


</div>

<!-- Modal -->
<div class="modal fade" id="Modal-addSalesProjection" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Sales Projection</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="clearScreen();">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <input class="form-control form-control-sm" type="hidden" id="tableName">
                    <input class="form-control form-control-sm" type="hidden" id="id">
                    <input class="form-control form-control-sm" type="hidden" id="entryDate">
                    <div class="row mb-2">
                        <div class="col form-group" id="col-select-client">
                            <label for="message-text" class="col-form-label">Client</label>
                            <span class="text-danger">*</span>
                            <select class="form-control form-control-sm selectedResource" id="clientId" focus required>
                                <option value="" selected disabled>Select Client</option>
                            </select>
                            <span class="error-message" style="color: red; display: none;">This field is required!</span>
                        </div>
                        <div class="col form-group">
                            <label for="fullName" class="col-form-label">Sales 1</label>
                            <input type="text" class="form-control" id="sales1" readonly disabled>
                        </div>
                        <div class="col form-group">
                            <label for="compName" class="col-form-label">Sales 2</label>
                            <input type="text" class="form-control" id="sales2" readonly disabled>
                        </div>
                    </div>
                    <div class="row mb-2 justify-content-end">
                        <div class="col-4">
                            <label for="message-text" class="col-form-label">Sales Contact 1</label>
                            <input type="text" oninput="this.value = this.value.replace(/\D/g, '');" class="form-control" id="salesContact1" maxlength="13" minlength="10" placeholder="Enter Sales Contact" pattern="0\d{0,13}" readonly disabled>
                        </div>
                        <div class="col-4">
                            <label for="message-text" class="col-form-label">Sales Contact 2</label>
                            <input type="text" oninput="this.value = this.value.replace(/\D/g, '');" class="form-control" id="salesContact2" maxlength="13" minlength="10" placeholder="Enter Sales Contact" pattern="0\d{0,13}" readonly disabled>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col">
                            <label for="message-text" class="col-form-label">Company Name</label>
                            <input type="text" class="form-control form-control-sm" placeholder="Enter Company Name" id="nameOfClient" readonly disabled>
                        </div>
                        <div class="col">
                            <label for="message-text" class="col-form-label">Company Origin</label>
                            <input type="text" class="form-control form-control-sm" placeholder="Enter Company Origin" id="companyOrigin" readonly disabled>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col">
                            <label for="message-text" class="col-form-label">PIC Client</label>
                            <input type="text" class="form-control form-control-sm" placeholder="Enter PIC Client" id="picClient" readonly disabled>
                        </div>
                        <div class="col">
                            <label for="message-text" class="col-form-label">Authority</label>
                            <input type="text" class="form-control form-control-sm" placeholder="Enter Authority" id="authority" readonly disabled>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col">
                            <label for="message-text" class="col-form-label">PIC Client Contact</label>
                            <input type="text" class="form-control form-control-sm" placeholder="Enter PIC Client Contact" id="clientContact" readonly disabled>
                        </div>
                        <div class="col">
                            <label for="message-text" class="col-form-label">Industry</label>
                            <input type="text" class="form-control form-control-sm" placeholder="Enter Industry" id="industry" readonly disabled>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col">
                            <label for="message-text" class="col-form-label">Attendees</label>

                            <input type="text" class="form-control form-control-sm" placeholder="Enter Attendees" oninput="this.value = this.value.replace(/[^a-zA-Z0-9 ]/g, '');" id="attendees" required>

                            <span class="error-message" style="color: red; display: none;">This field is required!</span>
                        </div>

                        <div class="col" id="colRequestBy">
                            <label for="message-text" class="col-form-label">Request By</label>
                            <span class="text-danger">*</span>
                            <select class="form-control form-control-sm" id="requestBy" required>
                                <option value="" selected disabled>Choose status</option>
                                <option value="Internal">Internal</option>
                                <option value="Sales Speciallist">Sales Speciallist</option>
                            </select>
                            <span class="error-message" style="color: red; display: none;">This field is required!</span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col">
                            <label for="message-text" class="col-form-label">Current News</label>
                            <textarea class="form-control" rows="3" placeholder="Enter Current News" id="currentNews" required></textarea>
                            <span class="error-message" style="color: red; display: none;">This field is required!</span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col">
                            <label for="message-text" class="col-form-label">Hiring Needs</label>
                            <textarea class="form-control" rows="3" placeholder="Enter Hiring Needs" id="hiringNeeds" required></textarea>
                            <span class="error-message" style="color: red; display: none;">This field is required!</span>
                        </div>
                    </div>
                    <div class="row mb-2">

                        <div class="col">
                            <label for="message-text" class="col-form-label">Hiring Process</label>

                            <input type="text" class="form-control form-control-sm" placeholder="Enter Hiring Process" oninput="this.value = this.value.replace(/[^a-zA-Z0-9 ]/g, '');" id="hiringProcess" required>

                            <span class="error-message" style="color: red; display: none;">This field is required!</span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col">
                            <label for="message-text" class="col-form-label">Timeline</label>

                            <input type="text" class="form-control form-control-sm" placeholder="Enter Timeline" oninput="this.value = this.value.replace(/[^a-zA-Z0-9 ]/g, '');" id="timeline" required>

                            <span class="error-message" style="color: red; display: none;">This field is required!</span>
                        </div>

                    </div>
                    <div class="row mb-2">
                        <div class="col">
                            <label for="message-text" class="col-form-label">Work location</label>

                            <textarea type="text" class="form-control form-control-sm" placeholder="Enter Work location" id="workLocation" required></textarea>

                            <span class="error-message" style="color: red; display: none;">This field is required!</span>
                        </div>
                        <div class="col">
                            <label for="message-text" class="col-form-label">Contract Periode</label>

                            <input class="form-control form-control-sm" type="text" placeholder="Enter Contract Periode" id="contractPeriode" required>

                            <span class="error-message" style="color: red; display: none;">This field is required!</span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col" id="colPriority">
                            <label for="message-text" class="col-form-label">Priority</label>
                            <span class="text-danger">*</span>
                            <select class="form-control form-control-sm" id="priority" required>
                                <option value="" selected disabled>Choose Priority</option>
                                <option value="High">High</option>
                                <option value="Medium">Medium</option>
                                <option value="Low">Low</option>
                            </select>
                            <span class="error-message" style="color: red; display: none;">This field is required!</span>
                        </div>
                        <div class="col" id="colStatusPro">
                            <label for="message-text" class="col-form-label">Status Projection</label>
                            <select class="form-control form-control-sm" id="projectStatus">
                                <option value="" selected disabled>Choose Status Projection</option>
                                <option value="Hold">Oppurtunity</option>
                                <option value="Open">MOM Sales</option>
                                <option value="Re Open">Re Open</option>
                                <option value="Best View">Best View</option>
                                <option value="Close Win">Close Win</option>
                                <option value="Close Lose">Close Lose</option>
                                <option value="Reject">Reject</option>
                            </select>
                            <span class="error-message" style="color: red; display: none;">This field is required!</span>
                        </div>
                        
                    </div>
                    <div class="row mb-2">
                        <div class="col">
                            <label for="message-text" class="col-form-label">Ratecard</label>
                            <textarea class="form-control" rows="3" placeholder="Enter Ratecard" id="rateCard" required></textarea>
                            <span class="error-message" style="color: red; display: none;">This field is required!</span>
                        </div>
                        <div class="col" id="colStatus">
                            <label for="message-text" class="col-form-label">Activity Status</label>
                            <span class="text-danger">*</span>
                            <select class="form-control form-control-sm" id="status" required>
                                <option value="" selected disabled>Choose Status</option>
                                <option value="Scheduling Meeting">Scheduling Meeting</option>
                                <option value="Meeting Done">Meeting Done</option>
                                <option value="Rate Card Sent">Rate Card Sent</option>
                                <option value="Rate Card Signed">Rate Card Signed</option>
                                <option value="Blocked">Blocked</option>
                                <option value="Closed Lost">Closed Lost</option>
                                <option value="CV Sent">CV Sent</option>
                                <option value="Interview User">Interview User</option>
                                <option value="Tech Test">Tech Test</option>
                                <option value="Offering">Offering</option>
                                <option value="Onboard">Onboard</option>
                                <option value="Awaiting Result">Awaiting Result</option>
                                <option value="CV Comparison">CV Comparison</option>
                                <option value="Gathering Data">Gathering Data</option>
                            </select>
                            <span class="error-message" style="color: red; display: none;">This field is required!</span>
                        </div>
                        <div class="col" id="colLastUpdate">
                            <label for="message-text" class="col-form-label">Last Update</label>
                            <span class="text-danger">*</span>
                            <select class="form-control form-control-sm" id="lastUpdate" required>
                                <option value="" selected disabled>Choose Status</option>
                                <option value="LastUpdate1">Last Update1</option>
                                <option value="LastUpdate2">Last Update2</option>
                                <option value="LastUpdate3">Last Update3</option>
                            </select>
                            <span class="error-message" style="color: red; display: none;">This field is required!</span>
                        </div>
                    </div>
                    <section id="fieldBestView" style="display:none">
                        <div class="row mb-2">
                            <div class="col">
                                <label for="message-text" class="col-form-label">Year Started</label>
                                <span class="text-danger">*</span>
                                <input class="form-control form-control-sm" type="text" placeholder="Enter Year Started" id="startedYear" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');">
                                <span class="error-message" style="color: red; display: none;">This field is required!</span>
                            </div>
                            <div class="col">
                                <label for="message-text" class="col-form-label">Project Type</label>
                                <span class="text-danger">*</span>
                                <select class="form-control form-control-sm" id="projectType">
                                    <option value="" selected disabled>Choose Type</option>
                                    <option value="Tender">Tender</option>
                                    <option value="Direct">Direct</option>

                                </select>
                                <span class="error-message" style="color: red; display: none;">This field is required!</span>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col">
                                <label for="message-text" class="col-form-label">Sales Projection</label>
                                <span class="text-danger">*</span>
                                <input class="form-control form-control-sm" type="number" placeholder="Enter Sales Projection" id="salesProject" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');">
                                <span class="error-message" style="color: red; display: none;">This field is required!</span>
                            </div>
                        </div>
                    </section>
                    <section id="fieldGoals" style="display:none">
                        <div class="row mb-2">
                            <div class="col">
                                <label for="message-text" class="col-form-label">COGS</label>
                                <span class="text-danger">*</span>
                                <input class="form-control form-control-sm" type="text" placeholder="Enter COGS" id="cogs" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');">
                                <span class="error-message" style="color: red; display: none;">This field is required!</span>
                            </div>
                            <div class="col">
                                <label for="message-text" class="col-form-label">SO Number</label>
                                <span class="text-danger">*</span>
                                <input class="form-control form-control-sm" type="text" placeholder="Enter SO Number" id="soNumber" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');">
                                <span class="error-message" style="color: red; display: none;">This field is required!</span>
                            </div>
                        </div>
                    </section>
                    <div class="row mb-2">

                        <div class="col">
                            <label for="message-text" class="col-form-label">Notes</label>
                            <textarea class="form-control" id="notes" rows="3" placeholder="Enter Notes"></textarea>
                            @* <span class="error-message" style="color: red; display: none;">This field is required!</span> *@
                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="Save" onclick="Save();">Save</button>
                <button type="button" class="btn btn-warning" id="Update" onclick="Update();" style="display:none">Update</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal" onclick=" ClearScreen()">Close</button>
            </div>
        </div>
    </div>
</div>



<!-- Modal Activity -->
<div class="modal fade" id="activityModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Sales Activity</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="needs-validation" id="formActivity" novalidate>
                    <div class="form-row">

                        <label for="validationCustom01">Date</label>
                        <span class="text-danger">*</span>
                        <input id="activityId" hidden>
                        <input id="spId" hidden>
                        <input type="date" class="form-control" id="dateActivity" required>
                        <div class="invalid-feedback">
                            This field is required!
                        </div>


                    </div>
                    <div class="form-row mt-3">

                        <label for="validationCustom02">Activity</label>
                        <textarea type="text" class="form-control" id="inputActivity" required></textarea>
                        <div class="invalid-feedback">
                            This field is required!
                        </div>

                    </div>

                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="saveActivity()">Save changes</button>
            </div>
        </div>
    </div>
</div>


<script src="~/js/ManageEmployee/moment.min.js"></script>
<script src="~/js/salesProjection.js"></script>