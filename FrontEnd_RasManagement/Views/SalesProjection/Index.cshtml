                </table>

                <table id="salesProjectionTableBestViews" class="table table-striped table-bordered text-nowrap w-100 timeSheetTable" style="font-size:13px; color:black; display:none">
                    <thead style="background-color:#FFFFFF">
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">Company Name</th>
                            <th scope="col">Industry</th>
                            <th scope="col">Position</th>
                            <th scope="col">HeadCount</th>
                            <th scope="col">Year Started</th>
                            <th scope="col">Status Project</th>
                            <th scope="col">Contract Periode</th>
                            <th scope="col">Ratecard</th>
                            <th scope="col">Sales Projection</th>
                            <th scope="col">COGS</th>
                            <th scope="col">GPM</th>
                            <th scope="col">SO Number</th>
                            <th scope="col">Notes</th>

                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Total</th>
                            <th colspan="10"></th>
                            <th>Total GPM</th>
