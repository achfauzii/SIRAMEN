    .card-body {
        font-family: "Calibri", Arial, sans-serif;
    }

    #editDetailsBtn {
        font-family: "Calibri", Arial, sans-serif;
        font-weight: bold;
    }

    @@media (max-width: 1199.98px) {
        .photo-container {
            margin-left: 0 !important;
            margin-top: 0 !important;
        }
    }
    .act-btn {
    background: #33A6CB;
    opacity: 80%;
    display: block;
    width: 50px;
    height: 50px;
    line-height: 50px;
    text-align: center;
    color: white;
    font-size: 32px;
    font-weight: bold;
    border-radius: 50%;
    text-decoration: none;
    transition: ease all 0.3s;
    position: fixed;
    right: 30px;
    bottom: 30px;
    z-index: 1;
