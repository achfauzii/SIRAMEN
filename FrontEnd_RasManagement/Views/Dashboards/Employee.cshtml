.coverh {
  
    position: fixed;
    z-index: 9;
    bottom: -15px; /* Adjust this value to increase the hover height */
    right: -10px; /* Adjust this value to increase the hover width */
     /* Adjust this value to increase the hover height */
}

.card-container {
    display: none;
    position: fixed;
    z-index: 9;
    bottom: 0;
    right: 0;
 

}

.coverh:hover  .card-container  {
    display: block;
}



