        font-size: 13px;
    }
    div.dataTables_wrapper div.dataTables_info {
        font-size: 13.5px;
    }

    table.dataTable > thead > tr > th, table.dataTable > thead > tr > td {
        font-size: 14px;
    }
    table.table-bordered.dataTable th, table.table-bordered.dataTable td{
        font-size: 14px;
    }

    .btn-info {
        margin: 5px 5px;
        padding: 6px 12px;
    }

    .btn-secondary {
        margin: 5px 5px;
        border-radius: 30px;
    }

    .bs-canvas-overlay {
        opacity: 0;
        z-index: -1;
    }

        .bs-canvas-overlay.show {
