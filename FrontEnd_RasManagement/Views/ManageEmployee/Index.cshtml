                <input type="radio" class="btn-check" name="filter-level" id="option2" value="Junior" autocomplete="off">
                <label class="btn btn-outline-primary" style="border-radius: 30px; font-size: 13px; line-height: 1.5;" for="option2">Junior</label>
                <input type="radio" class="btn-check" name="filter-level" id="option3" value="Junior to Middle" autocomplete="off">
                <label class="btn btn-outline-primary" style="border-radius: 30px; font-size: 13px; line-height: 1.5;" for="option3">Junior to Middle</label>
                <input type="radio" class="btn-check" name="filter-level" id="option4" value="Middle" autocomplete="off">
                <label class="btn btn-outline-primary" style="border-radius: 30px; font-size: 13px; line-height: 1.5;" for="option4">Middle</label>
                <input type="radio" class="btn-check" name="filter-level" id="option5" value="Middle to Senior" autocomplete="off">
                <label class="btn btn-outline-primary" style="border-radius: 30px; font-size: 13px; line-height: 1.5;" for="option5">Middle to Senior</label>
                <input type="radio" class="btn-check" name="filter-level" id="option6" value="Senior" autocomplete="off">
                <label class="btn btn-outline-primary" style="border-radius: 30px; font-size: 13px; line-height: 1.5;" for="option6">Senior</label>
            </div>
        </div>
        <div class="row m-1" style="font-size: 14px;">
            Financial Industry
            <div class="accordion-body mt-2">
                <input type="radio" class="btn-check" name="filter-financi" id="option7" value="Yes" autocomplete="off">
                <label class="btn btn-outline-primary" style="border-radius: 30px; font-size: 13px; line-height: 1.5;" for="option7">Ya</label>
                <input type="radio" class="btn-check" name="filter-financi" id="option8" value="False" autocomplete="off">
                <label class="btn btn-outline-primary" style="border-radius: 30px; font-size: 13px; line-height: 1.5;" for="option8">Tidak</label>
            </div>
        </div>
        <div class="row m-1" style="font-size: 14px;">
            Placement Status
            <div class="accordion-body mt-2">
                <input type="radio" class="btn-check" name="filter-placeStatus" id="option9" value="Onsite" autocomplete="off">
                <label class="btn btn-outline-primary" style="border-radius: 30px; font-size: 13px; line-height: 1.5;" for="option9">Onsite</label>
                <input type="radio" class="btn-check" name="filter-placeStatus" id="option10" value="Idle" autocomplete="off">
                <label class="btn btn-outline-primary" style="border-radius: 30px; font-size: 13px; line-height: 1.5;" for="option10">Idle</label>
            </div>
        </div>
        <div class="row m-1" style="font-size: 14px;">
            Hired Status
            <div class="accordion-body mt-2">
                <input type="radio" class="btn-check" name="filter-Hired" id="option11" value="Prohire" autocomplete="off">
                <label class="btn btn-outline-primary" style="border-radius: 30px; font-size: 13px; line-height: 1.5;" for="option11">Prohire</label>
                <input type="radio" class="btn-check" name="filter-Hired" id="option12" value="Bootcamp" autocomplete="off">
                <label class="btn btn-outline-primary" style="border-radius: 30px; font-size: 13px; line-height: 1.5;" for="option12">Bootcamp</label>
            </div>
        </div>
        <div class="row m-1" style="font-size: 14px;">
            Position
            <div class="accordion-body mt-2">
                <select class="form-select bg-light" id="selectPosition">
                    <option selected disabled>Choose Position</option>
                </select>
            </div>
        </div>
        <div class="row m-1" style="font-size: 14px;">
           Placement Location
            <div class="accordion-body mt-2">
                <select class="form-select bg-light" id="selectPlacementLoc">
                    <option selected disabled>Choose Placement</option>
                </select>
            </div>
        </div>
        <div class="row" style="font-size: 14px;">
            <button class="btn btn-sm btn-secondary col" style="border-radius: 30px;" type="button" id="resetFilterData">Clear</button>
            <button class="btn btn-sm btn-info col" style="border-radius: 30px; "type="button" id="submitFilter">Apply all filters</button>
        </div>
    </div>
</div>


