@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/LayoutAdmin.cshtml";
}



<table id="resource" class="table table-striped table-bordered text-nowrap" style="width:100%;" cellspacing="0">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nama</th>

            <th>Email</th>
        </tr>
    </thead>
    <tbody>

        <!-- Tambahkan baris-baris data lainnya di sini -->
    </tbody>
</table>



<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>


<script>
    $(document).ready(function () {
        $('#resource').DataTable({
             scrollX: true,
            processing: true,
            serverSide: true,
            ajax: {
                url: 'https://localhost:7177/api/Employees/DataTableGetEmployee', // Your API endpoint
                type: 'POST',
                contentType: 'application/json',
                data: function (d) {
                    // Customize request parameters here if needed
                    // Example: d.customParam = 'value';
                    return JSON.stringify(d);
                }
            },
            columns: [
                { data: 'accountId' },
                { data: 'fullname' },
                { data: 'email' },
                // ... other columns ...
            ],
            searching: true,
        });
    });
</script>









