@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/LayoutAdmin.cshtml";
}
<style>
    /* Atur ukuran font untuk badge dengan kelas khusus */
    .badge {
        font-size: 12px; /* Replace with your desired font size */
    }   

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #F7F6FE; /* Warna latar belakang untuk baris ganjil */
    }

    .table-striped tbody tr:nth-of-type(even) {
        background-color: #FFFFFF; /* Warna latar belakang untuk baris genap */
    }
    /* Mengurangi ukuran teks "Show [jumlah] entries" */
    #resource_length label {
        font-size: 14px; /* Ganti '12px' dengan ukuran font yang Anda inginkan */
    }

    /* Mengurangi ukuran teks kotak pencarian */
    #resource_filter label {
        font-size: 14px; /* Ganti '12px' dengan ukuran font yang Anda inginkan */
    }

    /* Mengurangi ukuran teks input kotak pencarian */
    #resource_filter input[type="search"] {
        font-size: 14px; /* Ganti '12px' dengan ukuran font yang Anda inginkan */
        height: 26px; /* Sesuaikan tinggi input jika diperlukan */
    }

    #resource td {
        font-size: 12px; /* Ganti dengan ukuran font yang Anda inginkan */
    }

    th {
        font-size: 12px;
    }

