
@{
    ViewData["Title"] = "ShorlistCandidate";
    Layout = "~/Views/Layout/LayoutAdmin.cshtml";
}

<h3>Shortlist Candidate</h3>
<button style="background-color:#624DE3; font-size: 12px;" type="button" class="btn btn-sm text-light mb-2" data-toggle="modal" data-target="#Modal" onclick="ClearScreen();">
    + Add Candidate
</button>

<div id="example"></div>

    <div class="controls">
  <button id="load" class="button button--primary button--blue">Load data</button>&nbsp;
  <button id="save" class="button button--primary button--blue">Save data</button>
  <label>
    <input type="checkbox" name="autosave" id="autosave"/>
    Autosave
  </label>
</div>

